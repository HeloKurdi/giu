@page
@model Uniapp.Pages.Colleges.Engineering.IndexModel
@{
    ViewData["Title"] = "College of Engineering - Galiawa International University";
}

<link rel="stylesheet" href="~/css/engineering-college.css" />

<div class="engineering-header">
    <div class="container">
        <h1>College of Engineering</h1>
        <p class="lead">Shaping the future through innovation and excellence in engineering education</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="department-card">
                <img src="~/images/software.jpg" class="card-img-top" alt="Software Engineering">
                <div class="card-body">
                    <h5 class="card-title">Software Engineering</h5>
                    <p class="card-text">Design and develop innovative software solutions for tomorrow's challenges.</p>
                    <a asp-page="/Colleges/Engineering/Departments/Software" class="btn btn-engineering">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="department-card">
                <img src="~/images/engineering-bg.png" class="card-img-top" alt="Civil Engineering">
                <div class="card-body">
                    <h5 class="card-title">Civil Engineering</h5>
                    <p class="card-text">Build the infrastructure that connects and sustains communities.</p>
                    <a asp-page="/Colleges/Engineering/Departments/Civil" class="btn btn-engineering">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="department-card">
                <img src="~/images/electrical.jpg" class="card-img-top" alt="Electrical Engineering">
                <div class="card-body">
                    <h5 class="card-title">Electrical Engineering</h5>
                    <p class="card-text">Power the world with cutting-edge electrical systems and technology.</p>
                    <a asp-page="/Colleges/Engineering/Departments/Electrical" class="btn btn-engineering">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="department-card">
                <img src="~/images/mechanical.jpg" class="card-img-top" alt="Mechanical Engineering">
                <div class="card-body">
                    <h5 class="card-title">Mechanical Engineering</h5>
                    <p class="card-text">Design and build the machines that drive industry and innovation.</p>
                    <a asp-page="/Colleges/Engineering/Departments/Mechanical" class="btn btn-engineering">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="about-engineering">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>About Our College</h2>
                <p>The College of Engineering at Galiawa International University is dedicated to preparing the next generation of engineering leaders. Our programs combine rigorous academic study with hands-on practical experience, ensuring our graduates are ready to tackle real-world challenges.</p>
                <p>With state-of-the-art facilities, experienced faculty, and strong industry partnerships, we provide an exceptional engineering education that emphasizes innovation, sustainability, and professional excellence.</p>
            </div>
        </div>
    </div>
</section>

<section class="engineering-stats">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-box">
                    <div class="number">4</div>
                    <div class="label">Departments</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box">
                    <div class="number">50+</div>
                    <div class="label">Faculty Members</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box">
                    <div class="number">1000+</div>
                    <div class="label">Students</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box">
                    <div class="number">95%</div>
                    <div class="label">Employment Rate</div>
                </div>
            </div>
        </div>
    </div>
</section> 