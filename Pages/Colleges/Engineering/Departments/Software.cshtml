@page
@model Uniapp.Pages.Colleges.Engineering.Departments.SoftwareModel
@{
    ViewData["Title"] = "Software Engineering Department";
}

@section Styles {
    <link rel="stylesheet" href="~/css/software-engineering.css" />
}

<!-- Header Section -->
<header class="software-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1>Bachelor in Software Engineering</h1>
                <p class="lead">Shape the future of technology through innovative software solutions. Join our comprehensive program that combines theory with hands-on practice.</p>
                <div class="software-stats">
                    <div class="stat-item">
                        <div class="number">4 Years</div>
                        <div class="label">Duration</div>
                    </div>
                    <div class="stat-item">
                        <div class="number">240</div>
                        <div class="label">ECTS Credits</div>
                    </div>
                    <div class="stat-item">
                        <div class="number">100%</div>
                        <div class="label">Employment Rate</div>
                    </div>
                    <div class="stat-item">
                        <div class="number">24/7</div>
                        <div class="label">Lab Access</div>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="#" class="btn btn-light btn-lg me-3">Apply Now</a>
                    <a href="#curriculum" class="btn btn-outline-light btn-lg">View Curriculum</a>
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-block">
                <div class="text-center">
                    <i class="fas fa-laptop-code fa-6x text-white opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Why Study Section -->
<section class="software-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>Why Study Software Engineering?</h2>
                <p class="lead">In an era driven by digital transformation, software engineers stand at the forefront of innovation. This program is designed for creative problem-solvers who want to build robust, scalable, and impactful software systems. Students will master programming fundamentals, data structures, and software architecture while exploring areas like cybersecurity, mobile apps, and game development.</p>
            </div>
        </div>
    </div>
</section>

<!-- What You'll Learn Section -->
<section class="software-section bg-light">
    <div class="container">
        <h2>What You'll Learn</h2>
        <p class="lead mb-5">Students progress through foundational computing and mathematics to advanced software engineering practices. Key study areas include:</p>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-code me-2 text-primary"></i>Programming Fundamentals</h5>
                        <p class="card-text">Master object-oriented design and core programming concepts.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-mobile-alt me-2 text-primary"></i>Web & Mobile Development</h5>
                        <p class="card-text">Build responsive web applications and mobile apps.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-bug me-2 text-primary"></i>Software Testing</h5>
                        <p class="card-text">Learn comprehensive testing and maintenance practices.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-gamepad me-2 text-primary"></i>Game Development</h5>
                        <p class="card-text">Create engaging games while mastering UI/UX principles.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-cloud me-2 text-primary"></i>Cloud Systems</h5>
                        <p class="card-text">Deploy and manage secure cloud-based applications.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-project-diagram me-2 text-primary"></i>Capstone Project</h5>
                        <p class="card-text">Develop a real-world software solution.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Graduate Skills Section -->
<section class="software-section">
    <div class="container">
        <h2>Graduate Skillset</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="software-card">
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Critical thinking and algorithmic problem-solving</li>
                            <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Team-based software development experience</li>
                            <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Industry-standard programming languages and tools</li>
                            <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Practical portfolio with web, mobile, and game applications</li>
                            <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Strong communication and ethical responsibility in software practice</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Career Pathways Section -->
<section class="software-section bg-light">
    <div class="container">
        <h2>Career Pathways</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-laptop-code me-2 text-primary"></i>Software Engineer</h5>
                        <p class="card-text">Design and develop software systems for various industries.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-mobile-alt me-2 text-primary"></i>Web & App Developer</h5>
                        <p class="card-text">Create web and mobile applications for diverse platforms.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="software-card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-gamepad me-2 text-primary"></i>Game Programmer</h5>
                        <p class="card-text">Develop engaging games and interactive experiences.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Entry Requirements Section -->
<section class="software-section">
    <div class="container">
        <h2>Entry Requirements</h2>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="software-card">
                    <div class="card-body">
                        <h5 class="mb-4">Basic Requirements</h5>
                        <ul class="list-unstyled">
                            <li class="mb-3"><i class="fas fa-graduation-cap me-2 text-primary"></i>High School Diploma</li>
                            <li class="mb-3"><i class="fas fa-calculator me-2 text-primary"></i>At least 70% in Math and Physics</li>
                            <li class="mb-3"><i class="fas fa-language me-2 text-primary"></i>English Proficiency: Entry exam</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="software-card">
                    <div class="card-body">
                        <h5 class="mb-4">Application Package</h5>
                        <ul class="list-unstyled">
                            <li class="mb-3"><i class="fas fa-file-alt me-2 text-primary"></i>Online Application Form</li>
                            <li class="mb-3"><i class="fas fa-file-invoice me-2 text-primary"></i>Official High School Transcript</li>
                            <li class="mb-3"><i class="fas fa-id-card me-2 text-primary"></i>ID or Passport Copy</li>
                            <li class="mb-3"><i class="fas fa-tasks me-2 text-primary"></i>Entrance Exam + Interview</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Curriculum Overview Section -->
<section class="software-section bg-light">
    <div class="container">
        <h2>Curriculum Overview</h2>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Year</th>
                        <th>Focus</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Year 1</td>
                        <td>Foundations in computing, mathematics, and logical thinking</td>
                    </tr>
                    <tr>
                        <td>Year 2</td>
                        <td>Core programming, discrete math, algorithm design</td>
                    </tr>
                    <tr>
                        <td>Year 3</td>
                        <td>Specialized modules (software testing, web/mobile development, graphics)</td>
                    </tr>
                    <tr>
                        <td>Year 4</td>
                        <td>Advanced software design, security, and final project</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section> 